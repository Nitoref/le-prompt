{
    "args" :
    {
        "left_segments": [
            "size",
            "perms",
            "dir",
            "git"
        ],
        "right_segments": [
            "time",
            "jobs",
            "exit"
        ],
        "newline_segments": [
            "root"
        ],

        "padding_left": 1,
        "padding_right": 1,
        "padding_end": 1,

        "force_newline": true,
        "hostname_short": true,
        "numeric_exit": true,
        "jobs_count"  : true,
        "git_count"  : true,
        "time_format" : "%H:%M  %d/%m/%y",
        "dir_fancy" : false
    },
    
    "symbols" :
    {
        "readonly" : "",
        "host"     : "",
        "root"     : "#",

        "top_prefix" : "╭─",
        "bot_prefix" : "╰─",

        "separator2"  : "",
        "rseparator2" : "",

        "prompt"         : "$",
        "dir_wrap"       : "…",

        "git_branch" :     "",
        "git_detached" :   "#",
        "git_stash" :      ".",
        "git_ahead" :      "↑",
        "git_behind" :     "↓",
        "git_staged" :     "+",
        "git_not_staged" : "!",
        "git_conflicted" : "*",
        "git_untracked" :  "?"
    },
    
    "theme":
    {
        "exit_failure":   { "fg": 198},

        "username":       { "fg": 254, "bg" : 240},
        "root":           { "fg":  37},
        "hostname":       { "fg": 254, "bg" : 235},
        "home":           { "fg": 230, "bg" :  24},
        "path":           { "fg": 254, "bg" :  24},
        "dir":            { "fg": 230, "bg" :  24},
        "readonly":       { "fg": 234, "bg" : 166},
        
        "time":           { "fg": 234, "bg" : 245},

        "git_clean":      { "fg": 250},
        "git_dirty":      { "fg": 250},
        "git_stash"      : {"fg" :  76},
        "git_ahead"      : {"fg" : 159},
        "git_behind"     : {"fg" : 240},
        "git_staged"     : {"fg" : 113},
        "git_nstaged"    : {"fg" :  11},
        "git_untracked"  : {"fg" : 14},
        "git_conflicted" : {"fg" : 9}
    },
    "extension" : {
        "size" : {
            "command" : "ls -ld | cut -c 2-11",
            "style" : {"bg":-1, "fg": -1}
        }
    }
}
